  <script>
    const defaultConfig = {
      greeting_text: '操你妈逼',
      background_color: '#1a1a2e',
      text_color: '#e0e0e0'
    };

    async function initApp() {
      if (window.elementSdk) {
        await window.elementSdk.init({
          defaultConfig,
          onConfigChange: async (config) => {
            const greetingEl = document.getElementById('greeting');
            const subtitleEl = document.getElementById('subtitle');
            const containerEl = document.getElementById('app-container');

            if (greetingEl) {
              greetingEl.textContent = config.greeting_text || defaultConfig.greeting_text;
            }

            if (subtitleEl) {
              subtitleEl.style.color = config.text_color || defaultConfig.text_color;
            }

            if (containerEl) {
              const bgColor = config.background_color || defaultConfig.background_color;
              containerEl.style.background = `linear-gradient(135deg, ${bgColor} 0%, ${adjustColor(bgColor, -10)} 50%, ${adjustColor(bgColor, -20)} 100%)`;
            }
          },
          mapToCapabilities: (config) => ({
            recolorables: [
              {
                get: () => config.background_color || defaultConfig.background_color,
                set: (value) => {
                  config.background_color = value;
                  window.elementSdk.setConfig({ background_color: value });
                }
              },
              {
                get: () => config.text_color || defaultConfig.text_color,
                set: (value) => {
                  config.text_color = value;
                  window.elementSdk.setConfig({ text_color: value });
                }
              }
            ],
            borderables: [],
            fontEditable: undefined,
            fontSizeable: undefined
          }),
          mapToEditPanelValues: (config) => new Map([
            ["greeting_text", config.greeting_text || defaultConfig.greeting_text]
          ])
        });
      }
    }

    function adjustColor(hex, percent) {
      const num = parseInt(hex.replace('#', ''), 16);
      const amt = Math.round(2.55 * percent);
      const R = Math.max(0, Math.min(255, (num >> 16) + amt));
      const G = Math.max(0, Math.min(255, ((num >> 8) & 0x00FF) + amt));
      const B = Math.max(0, Math.min(255, (num & 0x0000FF) + amt));
      return '#' + (0x1000000 + R * 0x10000 + G * 0x100 + B).toString(16).slice(1);
    }

    initApp();
  </script>
